{% extends 'base.html.twig' %}
{% block title %}
  {{ (mode == 'new') ? 'New Assessment Type' : 'Edit Assessment Type' }}
{% endblock %}

{% block stylesheet %}
<style>

</style>
{% endblock %}

{% block body %}
  <div class="container taright">
    <form class="form fright" method="post">
      <h1 class="welcomeText tacenter">{{ (mode == 'new') ? 'New Assessment Type System' : 'Edit Assessment Type System' }}</h1>
      <h2>{{ result_message is defined ? result_message : '' }}</h2>

      <label for="form[assessment_type_system_code]">Assessment Type System Code</label>
      <input type="text" name="form[assessment_type_system_code]" placeholder="" value="{{ form.assessment_type_system_code is defined ? form.assessment_type_system_code : '' }}" required />

      <label for="form[assessment_type_system_name]">Assessment Type System Name</label>
      <input type="text" name="form[assessment_type_system_name]" placeholder="" value="{{ form.assessment_type_system_name is defined ? form.assessment_type_system_name : '' }}" required />

      <button>{{ (mode == 'new') ? 'Create Assessment Type System' : 'Save Changes' }}</button>
    </form>

    <hr class="clear" width="0" />
  </div>
{% endblock %}
