{% extends 'base.html.twig' %}
{% block title %}
  Sessions View
{% endblock %}

{% block stylesheet %}
<style>

</style>
{% endblock %}

{% block body %}
  <div class="container" id="view_container">
    {% if viewer == 'teacher' %}
      <h1><big>
        {{ school_sessions[0].teacherId.firstName ~ ' ' ~ school_sessions[0].teacherId.middleName ~ ' ' ~ school_sessions[0].teacherId.lastName }}
      </big></h1>
    {% elseif viewer == 'student' %}
      <h1><big>
        {{ student.firstNameEn ~ ' ' ~ student.middleNameEn ~ ' ' ~ student.lastNameEn ~ ' (' ~ student.admissionNumber ~ ')' }}
      </big></h1>
    {% endif %}

    <table>
      <thead>
        <tr>
          <th>Session Code</th>
          <th>Session Name</th>
          <th>Session Section</th>
          <th>Session Teacher</th>
          <th>Session Course/Module</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        {% for school_session in school_sessions %}
          <tr>
            <td>{{ school_session.sessionCode }}</td>
            <td>{{ school_session.sessionName }}</td>
            <td>{{ school_session.sectionId.sectionName }}</td>
            <td>{{ school_session.teacherId.firstName }}</td>
            <td>
              {% if ( school_session.courseId.curriculumId.curriculumType == 'modularized' and school_session.courseId.moduleId is not null ) %}
                (Module) - {{ school_session.courseId.moduleId.moduleName }}
              {% elseif ( school_session.courseId.curriculumId.curriculumType == 'semester' and school_session.courseId.semesterId is not null ) %}
                (Semester) - {{ school_session.courseId.semesterId.semester ~ ' ' ~ school_session.courseId.semesterId.year }}
              {% endif %}
            </td>

            <td id="actions"><a href="{{ path('session_view_one', {'session_id': school_session.id}) }}">view</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
